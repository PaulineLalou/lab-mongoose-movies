    <h1 class="title">Delete a celebrity</h1>

    <label class="label" for="name">name</label>
    <input class="input" id="name" type="text" name="name" value="test celebrity">

    <label class="label" for="occupation">description</label>
        <input class="input" id="occupation" type="text" name="occupation" value="test occupation">

   <label class="label" for="catch-phrase">catch phrase</label>
        <input class="input" id="catch-phrase" type="text" name="catch-phrase" value="catch-phrase">


    
    <button class="btn">ok</button>
